<!-- 'DrawerLayout' is required to be the root if we want to implement a 'NavigationView' object -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_activity_main"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <!-- A 'CoordinatorLayout' object must be the "main" element if we want to have Material Design-based animations -->
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout_activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- The 'AppBarLayout' object holds the 'Toolbar' and the 'TabLayout', declaring its own 'theme' (in this case, white font is used) -->
        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_activity_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_activity_main"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center"/>
                <!-- android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/> -->
            <!-- android:elevation="?android:attr/elevation"/> -->
            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout_activity_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:tabMode="scrollable" />

        </android.support.design.widget.AppBarLayout>

        <!-- The following snippet encloses the 'ViewPager' inside a 'SwipeRefreshLayout which allows to define actions on a vertical drag gesture -->
        <!--
        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/swipeContainer"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        -->
        <!-- The 'layout_behavior' attribute is mandatory to allow Fragments to be placed within the 'ViewPager' -->
        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager_activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <!-- The 'layout_behavior' MUST be applied to a direct child of 'CoordinatorLayout' -->
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_activity_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_subscribe_24dp"
            android:layout_margin="@dimen/activity_vertical_margin"
            app:layout_anchor="@id/view_pager_activity_main"
            app:layout_anchorGravity="bottom|right|end"
            app:layout_behavior="org.deafsapps.latahona.util.ScrollFabBehaviour"/>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_activity_main"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_view_header"
        app:menu="@menu/navigation_view"/>

</android.support.v4.widget.DrawerLayout>
