<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/card_vertical_padding"
        android:paddingLeft="@dimen/card_horizontal_padding"
        android:paddingStart="@dimen/card_horizontal_padding"
        android:paddingRight="@dimen/card_horizontal_padding"
        android:paddingEnd="@dimen/card_horizontal_padding">
<!--
        <ImageView
            android:layout_width="100dp"
            android:layout_height="@dimen/card_image_height"
            android:id="@+id/card_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/card_image_horizontal_margin"
            android:layout_marginStart="@dimen/card_image_horizontal_margin"
            android:layout_marginTop="@dimen/card_image_vertical_margin"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/card_image_content_description"/>
-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:maxLines="3"
            android:ellipsize="end" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_body"
            android:layout_below="@id/card_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:maxLines="3"
            android:ellipsize="end" />

        <ImageButton
            android:layout_width="@dimen/card_button_width"
            android:layout_height="@dimen/card_button_height"
            android:id="@+id/share_button"
            android:src="@drawable/ic_share_24dp"
            android:layout_margin="@dimen/card_button_margin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/card_body"
            style="?android:attr/borderlessButtonStyle"
            android:contentDescription="@string/card_image_button_content_description"/>

        <ImageButton
            android:layout_width="@dimen/card_button_width"
            android:layout_height="@dimen/card_button_height"
            android:id="@+id/favourite_button"
            android:src="@drawable/ic_favorite_white"
            android:layout_margin="@dimen/card_button_margin"
            style="?android:attr/borderlessButtonStyle"
            android:layout_below="@id/card_body"
            android:layout_toLeftOf="@id/share_button"
            android:contentDescription="@string/card_image_button_content_description"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
